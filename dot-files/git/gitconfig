[user]
	name = Felix Duvallet
	email = felix.duvallet@epfl.ch
[alias]
        a = add .
	b = branch
        c = commit
	ci = commit
        ic = commit
        dif = diff
	st = status
	co = checkout
	l = log --abbrev-commit --decorate --stat
	lg = log --abbrev-commit --decorate --graph
        lol = log --abbrev-commit --decorate --graph --pretty=oneline
        lola = log --abbrev-commit --decorate --graph --pretty=oneline --all
        ls = ls-files
        wdiff = diff --color-words
        # Incoming and outgoing changes
        incoming = !git fetch && git log ..origin/master
        outgoing = !git fetch && git log origin/master..
[color]
	branch = auto
	diff = auto
	interactive = auto
	status = auto
	ui = auto
[core]
	pager = less -r
[credential]
	helper = cache --timeout=86400
[merge]
	conflictstyle = diff3
	ff = false
[push]
	default = simple
